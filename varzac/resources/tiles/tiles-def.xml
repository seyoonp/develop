<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
		"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
		"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<!-- ========================================================================== -->
    <!-- 							basic template 									-->
    <!-- ========================================================================== -->
    <!--
    	1. 레이아웃 구성을 xml element 로 정의(UI 변경 빈도가 거의 없는 정적영역)
    	2. 기본 템플릿 파일인 layout.jsp 안에 영역별 구성이 되는 jsp 구성
    	3. 동적영역이 되는 요소는 빈값으로 정의(content)
    -->
	<definition name="base-template" template="/WEB-INF/views/tiles/layout.jsp">
		<put-attribute name="title"  value="VARZAC"/>
		<put-attribute name="resource" value="/WEB-INF/views/tiles/resources.jsp"/>
		<put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp"/>
		<put-attribute name="leftBanner" value="/WEB-INF/views/tiles/leftBanner.jsp"/>
		<put-attribute name="content" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp"/>
	</definition>
	
	<!-- 
		1. base-template 레이아웃을 상속 받아 동적영역만 change
		2. controller에서 content 라는 view를 지정했을때 해당하는 UI		
	-->
	<definition extends="base-template" name="helloTiles">
		<put-attribute name="content" value="/WEB-INF/views/hello.jsp" />
	</definition>
	
	<!-- 
		1. base-template 레이아웃을 상속 받아 동적영역만 change
		2. 정규식 패턴화 (EX : /board/welcomeTo, /board/notice, /board/noticeView)		
	-->	
	<definition extends="base-template" name="/board/*">
		<put-attribute name="content" value="/WEB-INF/views/board/{1}.jsp" />
	</definition>
	
	<!-- 
		1. base-template 레이아웃을 상속 받아 동적영역만 change
		2. 정규식 패턴화 (EX : /order/ship/list, /order/pay/list, /order/claim/view)		
	-->	
	<definition extends="base-template" name="/order/*/*">
		<put-attribute name="content" value="/WEB-INF/views/order/{1}/{2}.jsp" />
	</definition>
</tiles-definitions>