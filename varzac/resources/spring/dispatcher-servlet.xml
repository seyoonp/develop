  		<bean class="org.springframework.mobile.device.switcher.SiteSwitcherHandlerInterceptor" factory-method="standard">
    		<constructor-arg value="${device.switcher.normal}" />
    		<constructor-arg value="${device.switcher.mobile}" />
    		<constructor-arg value="${device.switcher.tablet}" />
